<div class="question row">
  {{#if showEditForm}}
    <button class="btn btn-danger question-edit" {{action "hideEditForm"}}>
      Close Editor
    </button>
  {{else}}
    <button class="btn btn-primary question-edit" {{action "showEditForm"}}>
      Edit
    </button>
  {{/if}}
  <h3 class="question-content">Question: {{question.content}}</h3>
  <div class="question-notes">
    {{question.notes}}
  </div>
  <div class="question-author col-xs-3 col-right">
    By: {{question.author}}
  </div>
  <button {{action "incrementStars" question}} class="question-stars question-author col-xs-2">
    <i class="fa fa-star"></i>  {{question.stars}}
  </button>
  {{#if showEditForm}}
    <form class="col-md-12">
      <label for="content">Question</label>
      {{input value=content class="form-control"}}
      <label for="notes">Notes</label>
      {{input value=notes class="form-control"}}
      <button class="btn btn-block btn-warning" {{action "updateQuestion" question}}>Update</button>
    </form>
  {{/if}}
</div>
